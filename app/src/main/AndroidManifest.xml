<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kju.projeto.projetokju">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AtividadePrincipal"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AtividadeMenu"
            android:label="@string/title_activity_atividade_menu"
            android:parentActivityName=".AtividadePrincipal"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kju.projeto.projetokju.AtividadePrincipal" />
        </activity>
        <activity
            android:name=".AtividadeProdutosDoces"
            android:label="@string/title_activity_atividade_produtos_doces"
            android:parentActivityName=".AtividadeMenu"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kju.projeto.projetokju.AtividadeMenu" />
        </activity>
        <activity
            android:name=".AtividadeQuantidade"
            android:label="@string/title_activity_atividade_quantidade"
            android:parentActivityName=".AtividadeProdutosDoces"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kju.projeto.projetokju.AtividadeProdutosDoces" />
        </activity>
        <activity
            android:name=".AtividadeStatus"
            android:label="@string/title_activity_atividade_status"
            android:parentActivityName=".AtividadeMenu"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kju.projeto.projetokju.AtividadeMenu" />
        </activity>
    </application>

</manifest>